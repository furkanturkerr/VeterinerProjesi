@model DTOLayer.AnimalDtos.CreateAnimalDto

@{
    Layout = "~/Views/Admin/index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8 scroll-smooth">
    <div class="max-w-5xl mx-auto flex flex-col gap-8 pb-12">
        <form method="post">
        <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2 text-xs text-text-secondary">
                <a class="hover:text-primary" href="~/Admin">Admin</a>
                <span class="material-symbols-outlined text-[12px]">chevron_right</span>
                <a class="hover:text-primary" href="~/Admin/Animal">Hayvanlar</a>
                <span class="material-symbols-outlined text-[12px]">chevron_right</span>
                <span class="text-text-main font-medium">Hayvan Ekle</span>
            </div>
            <h2 class="text-2xl font-bold text-text-main">Hayvan Ekle</h2>
        </div>
        
        <div class="bg-surface-white p-6 rounded-2xl shadow-soft border border-gray-100">
            <div class="flex items-center gap-2 mb-6 border-b border-gray-100 pb-4">
                <span class="material-symbols-outlined text-primary">feed</span>
                <h3 class="text-lg font-bold text-text-main">Temel Bilgiler</h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Hayvan Adı</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text"  asp-for="Name"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Tür</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text"  asp-for="Species"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Irk</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text"  asp-for="Breed"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Sahibi</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text"  asp-for="OwnerId"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Yaş</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" asp-for="Age"/>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-text-secondary mb-2">Kilo (kg)</label>
                        <input
                            class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                            step="0.1" type="number" asp-for="@Model.Weight"/>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-text-secondary mb-2">Boy (cm)</label>
                        <input
                            class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                            type="number" asp-for="@Model.Height"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-surface-white p-6 rounded-2xl shadow-soft border border-gray-100 mt-5">
            <div class="flex items-center gap-2 mb-6 border-b border-gray-100 pb-4">
                <span class="material-symbols-outlined text-red-500">medical_services</span>
                <h3 class="text-lg font-bold text-text-main">Sağlık Bilgileri</h3>
            </div>
            <div class="flex flex-col gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Tıbbi Geçmiş</label>
                    <textarea
                                class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm placeholder:text-gray-400"
                                placeholder="Örn: Geçirilmiş ameliyatlar, önemli hastalıklar..."
                                rows="4" asp-for="@Model.MedicalHistory"></textarea>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-200">
            <a
                href="~/Admin/Animal"
                class="px-6 py-2.5 rounded-xl border border-gray-300 text-text-secondary font-medium hover:bg-gray-50 transition-colors">
                İptal
            </a>
            <button
                class="px-8 py-2.5 rounded-xl bg-primary text-white font-bold hover:bg-blue-600 shadow-lg shadow-blue-500/30 transition-all flex items-center gap-2">
                <span class="material-symbols-outlined text-[20px]">save</span>
                Kaydet
            </button>
        </div>
        </form>
    </div>
        </div>