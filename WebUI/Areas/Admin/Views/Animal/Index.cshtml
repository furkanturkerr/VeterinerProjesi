@model List<DTOLayer.AnimalDtos.ResultAnimalDto>

@{
    Layout = "~/Views/Admin/index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8 scroll-smooth">
    <div class="max-w-7xl mx-auto flex flex-col gap-8 pb-12">
        <div class="flex flex-col gap-4">
            <div class="flex items-center justify-between">
                <h2 class="text-xl font-bold text-text-main">Hayvanlar</h2>
                <a
                    href="~/Admin/Animal/CreateAnimal"
                    class="bg-primary hover:bg-blue-600 text-white px-4 py-2 rounded-lg text-sm font-medium transition-colors flex items-center gap-2 shadow-sm shadow-blue-200">
                    <span class="material-symbols-outlined text-[20px]">add</span>
                    Hayvan Ekle
                </a>
            </div>
            <div class="bg-surface-white rounded-2xl border border-gray-200 shadow-soft overflow-hidden">
                <div class="overflow-x-auto">
                    <table class="w-full text-left border-collapse">
                        <thead>
                        <tr class="bg-gray-50/50 border-b border-gray-100">
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Hayvan Adı</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Tür</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Irk</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Sahibi</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Yaş</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Kilo</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">
                                Boy</th>
                            <th
                                class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider text-right">
                                İşlemler</th>
                        </tr>
                        </thead>
                        <tbody class="divide-y divide-gray-100">
                        @foreach (var item in Model)
                        {
                         <tr class="hover:bg-gray-50/50 transition-colors group">
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-3">
                                    <div
                                        class="size-10 rounded-full bg-blue-100 flex items-center justify-center text-blue-600 shrink-0">
                                        <span class="material-symbols-outlined text-[22px]">pets</span>
                                    </div>
                                    <div>
                                        <p class="text-sm font-medium text-text-main">@item.Name</p>
                                        <p class="text-xs text-text-secondary">ID: @item.AnimalId</p>
                                    </div>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-text-secondary">@item.Species</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-text-secondary">@item.Breed</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <div class="flex items-center gap-2">
                                    <div
                                        class="size-6 rounded-full bg-orange-100 text-orange-600 flex items-center justify-center text-xs font-bold">
                                        A</div>
                                    <span class="text-sm text-text-secondary">@item.OwnerId</span>
                                </div>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-text-main">@item.Age</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-text-main">@item.Weight</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap">
                                <span class="text-sm text-text-main">@item.Height</span>
                            </td>
                            <td class="px-6 py-4 whitespace-nowrap text-right">
                                <div class="flex items-center justify-end gap-2">
                                    <a
                                        href="~/Admin/Animal/UpdateAnimal/@item.AnimalId"
                                        class="p-1.5 text-text-secondary hover:text-primary hover:bg-blue-50 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-[20px]">edit</span>
                                    </a>
                                    <a
                                        href="~/Admin/Animal/DeleteAnimal/@item.AnimalId"
                                        class="p-1.5 text-text-secondary hover:text-danger hover:bg-red-50 rounded-lg transition-colors">
                                        <span class="material-symbols-outlined text-[20px]">delete</span>
                                    </a>
                                </div>
                            </td>
                        </tr>   
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
   