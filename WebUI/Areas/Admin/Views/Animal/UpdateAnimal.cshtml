@model DTOLayer.AnimalDtos.ResultAnimalDto

@{
    Layout = "~/Views/Admin/index.cshtml";
}

<div class="flex-1 overflow-y-auto p-8 scroll-smooth">
    <div class="max-w-5xl mx-auto flex flex-col gap-8 pb-12">
        <form method="post">
        <div class="flex flex-col gap-2">
            <div class="flex items-center gap-2 text-xs text-text-secondary">
                <a class="hover:text-primary" href="~/Admin/">Admin</a>
                <span class="material-symbols-outlined text-[12px]">chevron_right</span>
                <a class="hover:text-primary" href="~/Admin/Animal">Hayvanlar</a>
                <span class="material-symbols-outlined text-[12px]">chevron_right</span>
                <span class="text-text-main font-medium">Hayvan Düzenle</span>
            </div>
            <h2 class="text-2xl font-bold text-text-main">Hayvan Düzenle</h2>
        </div>
        <div
            class="bg-surface-white p-6 rounded-2xl shadow-soft border border-gray-100 flex flex-col md:flex-row gap-8 items-start">
            <div class="flex flex-col gap-3 items-center flex-shrink-0">
                <div
                    class="size-32 rounded-2xl bg-gray-100 border border-gray-200 flex items-center justify-center text-gray-300 relative overflow-hidden group">
                    <span class="material-symbols-outlined text-6xl">pets</span>
                    <div
                        class="absolute inset-0 bg-black/40 hidden group-hover:flex items-center justify-center transition-all cursor-pointer">
                        <span class="material-symbols-outlined text-white text-3xl">edit</span>
                    </div>
                </div>
                <button
                    class="text-sm text-primary font-medium hover:text-blue-700 transition-colors flex items-center gap-1">
                    <span class="material-symbols-outlined text-sm">photo_camera</span>
                    Fotoğrafı Değiştir
                </button>
            </div>
            <div class="flex-1 w-full">
                <input type="hidden" asp-for="@Model.AnimalId"/>
                <div class="flex justify-between items-start mb-4">
                    <div>
                        <h3 class="text-xl font-bold text-text-main">@Model.Name</h3>
                    </div>
                </div>
                <div
                    class="grid grid-cols-2 md:grid-cols-4 gap-6 p-4 bg-background-light rounded-xl border border-gray-100">
                    <div>
                        <span class="block text-xs font-medium text-text-secondary mb-1">Hayvan Adı</span>
                        <span class="block text-sm font-semibold text-text-main">@Model.Name</span>
                    </div>
                    <div>
                        <span class="block text-xs font-medium text-text-secondary mb-1">Tür</span>
                        <span class="block text-sm font-semibold text-text-main">@Model.Species</span>
                    </div>
                    <div>
                        <span class="block text-xs font-medium text-text-secondary mb-1">Irk</span>
                        <span class="block text-sm font-semibold text-text-main">@Model.Breed</span>
                    </div>
                    <div>
                        <span class="block text-xs font-medium text-text-secondary mb-1">Sahibi</span>
                        <span
                            class="block text-sm font-semibold text-primary hover:underline cursor-pointer">@Model.OwnerId</span>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-surface-white mb-12 p-6 rounded-2xl shadow-soft border border-gray-100 mt-5">
            <div class="flex items-center gap-2 mb-6 border-b border-gray-100 pb-4">
                <span class="material-symbols-outlined text-primary">feed</span>
                <h3 class="text-lg font-bold text-text-main">Temel Bilgiler</h3>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Hayvan Adı</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" value="@Model.Name" asp-for="Name"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Tür</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" value="@Model.Species" asp-for="Species"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Irk</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" value="@Model.Breed" asp-for="Breed"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Sahibi</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" value="@Model.OwnerId" asp-for="OwnerId"/>
                </div>
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Yaş</label>
                    <input
                        class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                        type="text" value="@Model.Age" asp-for="Age"/>
                </div>
                <div class="grid grid-cols-2 gap-4">
                    <div>
                        <label class="block text-sm font-medium text-text-secondary mb-2">Kilo (kg)</label>
                        <input
                            class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                            step="0.1" type="number" value="@Model.Weight" asp-for="@Model.Weight"/>
                    </div>
                    <div>
                        <label class="block text-sm font-medium text-text-secondary mb-2">Boy (cm)</label>
                        <input
                            class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm"
                            type="number" value="@Model.Height" asp-for="@Model.Height"/>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-surface-white p-6 rounded-2xl shadow-soft border border-gray-100">
            <div class="flex items-center gap-2 mb-6 border-b border-gray-100 pb-4">
                <span class="material-symbols-outlined text-red-500">medical_services</span>
                <h3 class="text-lg font-bold text-text-main">Sağlık Bilgileri</h3>
            </div>
            <div class="flex flex-col gap-6">
                <div>
                    <label class="block text-sm font-medium text-text-secondary mb-2">Tıbbi Geçmiş</label>
                    <textarea
                                class="block w-full rounded-lg border-gray-200 bg-gray-50 focus:bg-white focus:border-primary focus:ring-primary sm:text-sm transition-all shadow-sm placeholder:text-gray-400"
                                placeholder="Örn: Geçirilmiş ameliyatlar, önemli hastalıklar..."
                                rows="4" asp-for="@Model.MedicalHistory">@Model.MedicalHistory</textarea>
                </div>
            </div>
        </div>
        <div class="flex items-center justify-end gap-4 pt-4 border-t border-gray-200">
            <a
                href="~/Admin/Animal"
                class="px-6 py-2.5 rounded-xl border border-gray-300 text-text-secondary font-medium hover:bg-gray-50 transition-colors">
                İptal
            </a>
            <a
                href="~/Admin/Animal/DeleteAnimal/@Model.AnimalId"
                class="px-6 py-2.5 rounded-xl border border-red-200 text-danger font-medium hover:bg-red-50 transition-colors flex items-center gap-2">
                <span class="material-symbols-outlined text-[18px]">delete</span>
                Sil
            </a>
            <button
                class="px-8 py-2.5 rounded-xl bg-primary text-white font-bold hover:bg-blue-600 shadow-lg shadow-blue-500/30 transition-all flex items-center gap-2">
                <span class="material-symbols-outlined text-[20px]">save</span>
                Güncelle
            </button>
        </div>
        </form>
    </div>
        </div>