@model DTOLayer.SummaryDtos.ResultSummaryDto

@{
    Layout = "~/Views/Admin/index.cshtml";
}

<nav aria-label="breadcrumb">
    <ol class="breadcrumb bg-transparent mb-0 pb-0 pt-1 px-0 me-sm-6 me-5">
        <li class="breadcrumb-item text-sm"><a class="opacity-5 text-white" href="javascript:;">Admin</a></li>
        <li class="breadcrumb-item text-sm text-white active" aria-current="page">Anasayfa</li>
    </ol>
    <h6 class="font-weight-bolder text-white mb-0">Özet Alanı Güncelle</h6>
</nav>
<br/>

<form method="post" class="form-control">
    <input type="hidden" asp-for="@Model.SummaryId"/>
    <label for="Title">Başlık</label>
    <input type="text" value="@Model.Title" asp-for="@Model.Title" class="form-control" id="Title"/>
    <br/>
    <label for="Description">Açıklama</label>
    <input type="text" value="@Model.Description" asp-for="@Model.Description" class="form-control" id="Description"/>
    <br/>
    <label for="İcon">İcon</label>
    <input type="text" value="@Model.İcon" asp-for="@Model.İcon" class="form-control" id="İcon"/>
    <br/>
    <button class="btn btn-outline-warning">Güncelle</button>
</form>