@model System.Collections.Generic.List<DTOLayer.UIAppointmentDtos.ResultUIAppointmentDto>

@{
    Layout = "~/Views/Admin/index.cshtml";
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div>
        <h2 class="text-2xl font-bold text-text-main">Cta Alanı</h2>
    </div>
    <a class="bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2 shadow-sm shadow-blue-200 w-full md:w-auto"
       href="~/Admin/UIAppointment/CreateUIAppointment">
        <span class="material-symbols-outlined text-[20px]">add</span>
        Cta Alanı Ekle
    </a>
</div>
<br/>
    @foreach (var item in Model)
    {
       <div class="w-full bg-white dark:bg-[#1a202c] rounded-xl shadow-[0_2px_12px_-4px_rgba(0,0,0,0.08)] border border-slate-200 dark:border-slate-800 overflow-hidden">
            <!-- Card Header / Toolbar style -->
            <div
                class="px-6 py-4 border-b border-slate-100 dark:border-slate-800 flex items-center justify-between bg-slate-50/50 dark:bg-slate-800/30">
                <div class="flex items-center gap-2">
                    <span class="material-symbols-outlined text-slate-400 text-sm">visibility</span>
                    <span class="text-xs font-bold text-slate-500 uppercase tracking-wider">Web Sitesi
                        Önizleme</span>
                </div>
                <div class="flex items-center gap-2">
                    <div class="size-2 rounded-full bg-green-500 animate-pulse"></div>
                    <span class="text-xs font-medium text-slate-500">Yayında</span>
                </div>
            </div>
            <!-- Main Preview Content -->
            <div class="p-8 md:p-12">
                <div class="max-w-4xl mx-auto flex flex-col items-center text-center">
                    <!-- Main Title -->
                    <h3
                        class="text-3xl md:text-4xl font-extrabold text-[#111318] dark:text-white mb-3 tracking-tight">
                        @item.Text
                    </h3>
                    <!-- Green Highlighted Subtitle -->
                    <h4
                        class="text-xl md:text-2xl font-semibold text-emerald-600 dark:text-emerald-400 mb-8">
                        @item.ButtonText
                    </h4>
                    <!-- Description Text -->
                    <div
                        class="prose prose-lg dark:prose-invert text-slate-600 dark:text-slate-300 max-w-3xl mb-12 leading-relaxed">
                        <p>
                            @item.Description
                        </p>
                    </div>
                </div>
            </div>
        </div>
        <!-- Action Area -->
        <div class="mt-8 flex justify-center md:justify-end pb-12 m-lg-2">
            <a
                href="~/Admin/UIAppointment/UpdateUIAppointment/@item.UIAppointmentId"
                class="bg-primary hover:bg-blue-600 text-white font-medium py-3 px-6 rounded-lg shadow-lg shadow-blue-500/20 transition-all active:scale-95 flex items-center gap-2 group">
                <span
                    class="material-symbols-outlined text-[20px] group-hover:rotate-12 transition-transform">edit_square</span>
                <span>Düzenle</span>
            </a>
        </div>
    }