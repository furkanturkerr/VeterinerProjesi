@model System.Collections.Generic.List<DTOLayer.BlogDtos.ResultBlogDto>

@{
    Layout = "~/Views/Admin/index.cshtml";
    int Count = 0;
}

<div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
    <div>
        <h2 class="text-2xl font-bold text-text-main">Blog Yazıları</h2>
    </div>
    <a class="bg-primary hover:bg-blue-600 text-white px-5 py-2.5 rounded-lg text-sm font-medium transition-colors flex items-center justify-center gap-2 shadow-sm shadow-blue-200 w-full md:w-auto"
       href="~/Admin/Blog/CreateBlog">
        <span class="material-symbols-outlined text-[20px]">add</span>
        Blog Ekle
    </a>
</div>
<div class="bg-surface-white rounded-2xl border border-gray-200 shadow-soft overflow-hidden">
    <div class="overflow-x-auto">
        <table class="w-full text-left border-collapse">
            <thead>
            <tr class="bg-gray-50/50 border-b border-gray-100">
                <th class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">#</th>
                <th class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">İsim</th>
                <th class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">Açıklama</th>
                <th class="px-6 py-4 text-xs font-semibold text-text-secondary uppercase tracking-wider">İşlemler</th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
            @foreach (var item in Model)
            {
                Count++;
                <tr class="hover:bg-gray-50/50 transition-colors group">
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-text-secondary">@Count</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-text-secondary">@item.Name</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap">
                        <div class="flex items-center gap-2">
                            <span class="text-sm text-text-secondary">@item.Description</span>
                        </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-right">
                        <div class="flex items-center justify-end gap-2">
                            <a
                                href="~/Admin/Blog/UpdateBlog/@item.BlogId"
                                class="flex items-center gap-1.5 px-3 py-1.5 bg-blue-50 text-primary rounded-lg hover:bg-blue-100 transition-colors text-xs font-medium">
                                <span class="material-symbols-outlined text-[16px]">edit</span>
                                Güncelle
                            </a>
                            <a
                                href="~/Admin/Blog/DeleteBlog/@item.BlogId"
                                class="flex items-center gap-1.5 px-3 py-1.5 bg-red-50 text-danger rounded-lg hover:bg-red-100 transition-colors text-xs font-medium">
                                <span class="material-symbols-outlined text-[16px]">delete</span>
                                Sil
                            </a>
                        </div>
                    </td>
                </tr>   
            }
            </tbody>
        </table>
    </div>

</div>