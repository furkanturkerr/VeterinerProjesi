@model dynamic

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
@await Component.InvokeAsync("_LayoutHeaderComponent")
<body class="g-sidenav-show   bg-gray-100">
<div class="min-height-300 bg-dark position-absolute w-100"></div>
@await Component.InvokeAsync("_LayoutSidebarComponent")
  <main class="main-content position-relative border-radius-lg ">
    @await Component.InvokeAsync("_LayoutNavbarComponent")
    <div class="container-fluid py-4">
      <div class="row">
        <div class="col-12">
          @RenderBody()
        </div>
      </div>
      @await Component.InvokeAsync("_LayoutFooterComponent")
    </div>
  </main>
  @await Component.InvokeAsync("_LayoutScriptComponent")
</body>

</html>